set working-directory := "../.."

# Environment variables
set export
STARLINGS_DEBUG := "1"

# Run all tests (Python + Rust)
default: python rust
    @echo "âœ… Ran tests (Python + Rust)."

# List all commands
list:
    just -f ./src/tests/justfile --list

# Run Python tests
python:
    @echo "Running Python tests..."
    STARLINGS_DEBUG=1 uv run pytest

# Run only Rust tests
rust:
    @echo "Running Rust core tests..."
    cargo test -p starlings-core
